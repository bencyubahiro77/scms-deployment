<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Popover
        id="profilePopover"
        title="Account"
        placement="Bottom"
        contentWidth="150px"
        contentHeight="80px"
    >
        <VBox id="_IDGenVBox4">
            <Link
                text="{i18n>profile}"
                id="profile-link"
                class="popoverLink"
                press="onProfilePress"
                icon="sap-icon://person-placeholder"
            />
            <Link id="_IDGenLink2"
                text="{i18n>logout}"
                class="popoverLink"
                icon="sap-icon://log"
                press="onLogoutPress"
            />
        </VBox>
    </Popover>
</core:FragmentDefinition>
