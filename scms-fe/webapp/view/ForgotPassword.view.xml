<mvc:View
	controllerName="scmsfe.controller.ForgotPassword"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'scmsfe/model/formatter'
	}">

    <VBox id="_IDGenVBox20" class="sapUiContentPadding loginCard" alignItems="Center" justifyContent="Center" height="100%">

        <Panel id="_IDGenPanel3">
            <VBox id="_IDGenVBox21">
			    <HBox id="_IDGenHBox7" justifyContent="Center" alignItems="Center">
				 <Image id="_IDGenImage4" src="images/467_sap.png" alt="SCMS Project Logo" width="150px" />
				</HBox>

				<Label id="_IDGenLabel27" text="{i18n>Reset}" design="Bold"/>
				<Text id="_IDGenText8" text="{i18n>ResetText}" wrapping="true" width="100%" />

                <Label id="_IDGenLabel28" text="{i18n>email}" design="Bold" class="sapUiSmallMarginTop"/>
                <Input placeholder="{i18n>enterEmail}" id="forgotEmailInput" type="Email" change="validateEmail"  />
				
				<HBox id="_IDGenHBox8" class="sapUiSmallMarginTop">
				    <Button id="_IDGenButton" text="{i18n>submit}" type="Emphasized" class="btn" press=".onForgotPasswordPress" />
				</HBox>
            </VBox>

			<HBox id="_IDGenHBox9" justifyContent="Center" alignItems="Center" class="sapUiSmallMarginTop">
				<Image id="_IDGenImage5" src="images/467_sap.png" alt="SAP Logo" width="100px" />
				<Text id="_IDGenText9" text="{i18n>powered}" class="sapUiTinyMarginBegin" />
		   </HBox>
        </Panel>
    </VBox>
</mvc:View>
