<mvc:View
    controllerName="scmsfe.controller.ResetPassword"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <VBox id="_IDGenVBox26"
        class="sapUiContentPadding loginCard"
        alignItems="Center"
        justifyContent="Center"
    >
        <Panel id="_IDGenPanel5">
            <VBox id="_IDGenVBox27">
                <HBox id="_IDGenHBox13"
                    justifyContent="Center"
                    alignItems="Center"
                >
                    <Image id="_IDGenImage8"
                        src="images/467_sap.png"
                        alt="SCMS Project Logo"
                        width="150px"
                    />
                </HBox>

                <Label id="_IDGenLabel30"
                    text="{i18n>newPassword}"
                    class="sapUiSmallMarginTop"
                    design="Bold"
                />
                <Input
                    type="Password"
                    placeholder="{i18n>enterPassword}"
                    id="newPasswordInput"
					showValueHelp="true"
                    valueHelpIconSrc="sap-icon://show"
                    valueHelpRequest="onTogglePasswordVisibility"
					class="passwordInput"
                />

                <Label id="_IDGenLabel31"
                    text="{i18n>confirmNewPassword}"
                    class="sapUiSmallMarginTop"
                    design="Bold"
                />
                <Input
                    type="Password"
                    placeholder="{i18n>enterPassword}"
                    id="confirmNewPasswordInput"
					showValueHelp="true"
                    valueHelpIconSrc="sap-icon://show"
                    valueHelpRequest="onTogglePasswordVisibility"
					class="passwordInput"
                />

                <HBox id="_IDGenHBox14" class="sapUiSmallMarginTop">
                    <Button id="_IDGenButton7"
                        text="{i18n>submit}"
                        type="Emphasized"
                        class="btn"
                        press=".onResetPasswordPress"
                    />
                </HBox>
            </VBox>

            <HBox id="_IDGenHBox15"
                justifyContent="Center"
                alignItems="Center"
                class="sapUiSmallMarginTop"
            >
                <Image id="_IDGenImage9"
                    src="images/467_sap.png"
                    alt="SAP Logo"
                    width="100px"
                />
                <Text id="_IDGenText13"
                    text="{i18n>powered}"
                    class="sapUiTinyMarginBegin"
                />
            </HBox>
        </Panel>
    </VBox>
</mvc:View>
