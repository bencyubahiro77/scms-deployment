<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    controllerName="scmsfe.controller.ErrorPage"
>
    <l:VerticalLayout id="_IDGenVerticalLayout"
        width="100%"
        class="errorPageLayout"
    >
        <Panel id="_IDGenPanel2"
            class="errorPanel sapUiContentPadding"
            width="auto"
        >
            <VBox id="_IDGenVBox18"
                alignItems="Center"
                justifyContent="Center"
            >
                <HBox id="_IDGenHBox6"
                    width="100%"
                    justifyContent="Start"
                >
                    <Text id="_IDGenText6"
                        text="{i18n>504}"
                        class="errorCodeText"
                    />
                </HBox>

                <Image id="_IDGenImage3" src="images/Vector.svg" />

                <Text id="_IDGenText7"
                    text="{i18n>unableToFindMetaData}"
                    class="sapUiSmallMarginTop"
                />

                <Button id="_IDGenButton4"
                    text="{i18n>retry}"
                    press="onRetryPress"
                    class="sapUiSmallMarginTop"
                />
            </VBox>
        </Panel>
    </l:VerticalLayout>
</mvc:View>
