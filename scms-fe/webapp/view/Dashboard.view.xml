<mvc:View
    controllerName="scmsfe.controller.Dashboard"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    core:require="{
		formatter: 'scmsfe/model/formatter'
	}"
>
    <Panel
        id="dashboardPanel"
        backgroundDesign="Transparent"
        height="100%"
    >

        <f:GridList
            id="gridList"
            items="{gridItemsModel>/gridItems}"
            class="limitedColumns sapUiMediumMarginTop"
        >
            <f:customLayout>
                <grid:GridBoxLayout id="_IDGenGridBoxLayout" boxMinWidth="20rem" />
            </f:customLayout>

            <f:GridListItem id="_IDGenGridListItem"
                class="sapUiSmallMargin"
                type="Active"
                press=".onTilePress"
            >
                <VBox id="_IDGenVBox5"
                    class="sapUiMediumMargin"
                    justifyContent="Center"
                    alignItems="Center"
                >
                    <layoutData>
                        <FlexItemData id="_IDGenFlexItemData"
                            growFactor="1"
                            shrinkFactor="0"
                        />
                    </layoutData>
                    <Image id="_IDGenImage2"
                        src="{gridItemsModel>imageSrc}"
                        width="4rem"
                        height="4rem"
                    />

                    <Title id="_IDGenTitle1"
                        text="{gridItemsModel>title}"
                        wrapping="true"
                    />
                    <Label id="_IDGenLabel18"
                        text="{gridItemsModel>title}"
                        wrapping="true"
                    />
                </VBox>
            </f:GridListItem>
        </f:GridList>
    </Panel>
</mvc:View>
