<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog
        class="sapUiResponsiveMargin"
        id="userSorter"
        confirm=".onSortUsers"
        reset=".onResetSorter"
    >
        <sortItems>
            <ViewSettingsItem
                text="{i18n>name}"
                key="sortfirstName"
                id="sortfirstName"
            />
            <ViewSettingsItem
                text="{i18n>role}"
                key="sortRole"
                id="sortRole"
            />
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>